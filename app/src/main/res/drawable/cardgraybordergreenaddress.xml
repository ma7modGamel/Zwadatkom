<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/white"
    tools:targetApi="lollipop">
    <item android:state_pressed="false" android:state_checked="false" android:state_selected="false"  >
        <shape android:shape="rectangle" >
            <corners android:radius="12dp"
                />
            <solid android:color="@color/gray" />
            <stroke android:color="@color/gray"
                android:width="1dp"/>
            <gradient
                android:angle="135"
                android:centerX="50%"

                android:startColor="@color/gray"
                android:endColor="@color/gray"
                android:type="linear"
                />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_checked="true" android:state_selected="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="12dp"
                />
            <solid android:color="@color/gray" />
            <stroke android:color="@color/purple_700"
                android:width="1dp"/>
            <gradient
                android:angle="135"
                android:centerX="50%"

                android:startColor="@color/gray"
                android:endColor="@color/gray"
                android:type="linear"
                />
        </shape>
    </item>
</ripple>