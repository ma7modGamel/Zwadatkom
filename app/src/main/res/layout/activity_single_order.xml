<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="singleOrderVmodel"
            type="com.safwa.zawadatkm_user.single.order.SingleOrderViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="24dp">

                        <ImageButton
                            android:id="@+id/btnBack"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:background="@drawable/itembackbtn"
                            android:src="@drawable/graybackarrow" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="طلباتى"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:minWidth="120dp"
                            android:text="رقم الاوردر : "
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtNumOrder"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="56854233 "
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="28dp"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="50dp"

                                android:layout_height="50dp"

                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:backgroundTint="@color/purple_200"
                                android:background="@drawable/edittextcardwite"
                                android:padding="4dp"
                                android:src="@drawable/calender">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/purple_200"
                                    android:padding="8dp"
                                    android:src="@drawable/donerequest"
                                    android:tint="@color/white" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"

                                android:backgroundTint="@color/purple_500"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/edittextcardwite"
                                android:padding="4dp"
                                android:src="@drawable/calender">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/purple_500"
                                    android:padding="8dp"
                                    android:src="@drawable/recived"
                                    android:tint="@color/white" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"


                                android:background="@drawable/edittextcardwite"
                                android:padding="4dp"
                                android:backgroundTint="@color/purple_700"
                                android:src="@drawable/calender">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/purple_700"
                                    android:padding="4dp"
                                    android:src="@drawable/shipped"
                                    android:tint="@color/white" />

                            </LinearLayout>

                            <LinearLayout
                                android:backgroundTint="@color/green"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/edittextcardwite"
                                android:padding="4dp"
                                android:src="@drawable/calender">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/green"
                                    android:padding="8dp"
                                    android:src="@drawable/arrived"
                                    android:tint="@color/white" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="28dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="28dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"

                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/cir1"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@color/purple_500" />

                            <View
                                android:id="@+id/space1"
                                android:layout_width="2dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/purple_500" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/cir2"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@color/purple_500" />

                            <View
                                android:id="@+id/space2"
                                android:layout_width="2dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/purple_500" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/cir3"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@color/purple_500" />

                            <View
                                android:id="@+id/space3"
                                android:layout_width="2dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/purple_500" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/cir4"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@color/purple_500" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="70dp"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/status1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text=" "
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/date1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text="" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="70dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/status2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text=" "
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/date2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text="" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="70dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/status3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text=" "

                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/date3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text="" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="70dp"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"

                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/status4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text=" "
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/date4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text="" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5">

                            <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/time1"
                                android:textSize="10sp"
                                android:text="12 : 30 مساءا"
                                android:textColor="@color/black_overlay"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"

                                android:id="@+id/time2"

                                android:textSize="10sp"
                                android:textColor="@color/black_overlay"

                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:gravity="center"

                                android:id="@+id/time3"

                                android:textSize="10sp"
                                android:textColor="@color/black_overlay"

                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/time4"
                                android:gravity="center"

                                android:textSize="10sp"
                                android:textColor="@color/black_overlay"

                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:minWidth="120dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="المنتجات "
                        android:textSize="16sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/rvOderrs"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_margin="16dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/dotline"
                        android:layout_height="4dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginStart="32dp"
                            android:textColor="@color/black"
                            android:text="السعر"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/txtPrice"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="0 ر.س"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginStart="32dp"
                            android:textColor="@color/purple_200"
                            android:text="الخصم"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/txtProm"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textSize="12sp"

                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/purple_200"
                            android:text="0 ر.س"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginStart="32dp"
                            android:textColor="@color/purple_200"
                            android:text="الضريبة"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textSize="12sp"

                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/purple_200"
                            android:text="0 ر.س"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginStart="32dp"
                            android:textColor="@color/black"
                            android:text="الاجمالى"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/finalTxt"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textSize="12sp"

                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="0 ر.س"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_margin="16dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/dotline"
                        android:layout_height="4dp"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>