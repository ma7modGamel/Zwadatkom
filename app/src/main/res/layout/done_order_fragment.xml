<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="DoneOrderVmodel"
            type="com.safwa.zawadatkm_user.paymentsteps.ui.doneorder.DoneOrderViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".paymentsteps.ui.doneorder.DoneOrderFragment">


        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_margin="24dp">

                        <ImageButton
                            android:id="@+id/btnBack"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:background="@drawable/itembackbtn"
                            android:src="@drawable/graybackarrow" />

                    </RelativeLayout>
                    <TextView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:text="تم الطلب"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_margin="24dp"
                        android:textColor="@color/black"
                        android:layout_height="40dp"
                        android:layout_weight="1" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                </LinearLayout>




                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/edittextcardgray2"
                        android:layout_width="100dp"
                        android:padding="16dp"
                        android:src="@drawable/happyimo"
                        android:layout_height="100dp"/>
                    <TextView
                        android:layout_marginTop="32dp"
                        android:gravity="end"
                        android:layout_gravity="center"

                        android:layout_width="wrap_content"
                        android:text="شكرا لك علي الشراء .."
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                         />
                    <TextView
                        android:layout_marginTop="32dp"
                        android:gravity="center"
                        android:layout_gravity="center"

                        android:layout_width="wrap_content"
                        android:text="يمكنك تتبع حالة الطلب من خلال قائمة طلباتى "
                        android:textStyle="normal"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        />
                    <androidx.appcompat.widget.AppCompatButton

                        android:layout_marginTop="32dp"
                        android:background="@drawable/ripple_effect"
                        android:layout_gravity="center"

                        android:id="@+id/ContinuoShopping"
                        android:minWidth="200dp"
                        android:textColor="@color/white"
                        android:text="متابعة التسوق"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="32dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginEnd="64dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp" />
                    <androidx.appcompat.widget.AppCompatButton


                        android:background="@drawable/ripple_whitebtn"
                        android:layout_gravity="center"

                        android:id="@+id/goToMyOrders"
                        android:minWidth="200dp"
                        android:textColor="@color/green"
                        android:text="متابعة الطلب"
                        android:textSize="14sp"

                        android:textStyle="bold"
                        android:layout_marginBottom="32dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginEnd="64dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>