<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:padding="4dp"
    android:layout_height="wrap_content">
  <LinearLayout
      android:background="@drawable/edittextcardgraygreen"

      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <ImageView
          android:layout_width="170dp"
          android:maxWidth="180dp"
          android:id="@+id/imgPro"
          android:scaleType="centerCrop"
          android:src="@drawable/tomato"
          android:layout_height="100dp"/>
      <LinearLayout
          android:layout_gravity="bottom|center"
          android:gravity="bottom|center"
          android:orientation="vertical"
          android:background="@drawable/edittextcardgray"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="12dp"
              android:layout_marginStart="16dp"
              android:layout_marginBottom="2dp"
              android:layout_marginTop="8dp"
              android:layout_weight="1"
              android:lines="1"
              android:id="@+id/namePro"
              android:text=""
              android:textColor="@color/black"
              android:textSize="16sp"
              android:textStyle="bold" />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="12dp"
              android:layout_marginStart="16dp"
              android:lines="1"

              android:id="@+id/catPro"
              android:layout_weight="1"
              android:text=""
              android:textColor="@color/black_overlay"
              android:textSize="12sp" />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="40dp">
              <TextView
                  android:layout_width="0dp"

                  android:lines="1"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="12dp"
                  android:layout_marginStart="16dp"
                  android:layout_marginBottom="2dp"
                  android:layout_marginTop="8dp"
                  android:layout_weight="1"
                  android:text=""
                  android:id="@+id/pricePro"
                  android:textColor="@color/green"
                  android:textSize="16sp"
                  android:textStyle="bold" />
              <RelativeLayout

                  android:layout_width="wrap_content"
                  android:layout_height="match_parent">

                  <ImageButton
                      android:id="@+id/rlAddtocart"

                      android:layout_width="40dp"

                      android:layout_height="match_parent"

                      android:background="@drawable/itemplus"
 />

                  <ImageView
                      android:layout_width="40dp"
                      android:layout_height="match_parent"

                      android:elevation="10dp"
                      android:padding="12dp"

                      android:src="@drawable/plus" />
              </RelativeLayout>

          </LinearLayout>
      </LinearLayout>

  </LinearLayout>
</LinearLayout>