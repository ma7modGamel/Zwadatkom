<resources>

    <style name="Widget.Theme.Zwadatkom.ActionBar.Fullscreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:fontFamily">@font/bahijlight</item>

    </style>

    <style name="TextAppearance.AppCompat.Title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeColor">@color/gray</item>

        <item name="android:textColorHint">@color/black_overlay</item>
        <item name="hintTextAppearance">@color/green</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>


    </style>

</resources>